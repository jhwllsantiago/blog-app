<div id="<%= dom_id tutorial %>" class="container w-75 mt-3 mb-5">
  <p class="badge bg-secondary mb-1">#<%= tutorial.category %></p>
  <p class="text-capitalize badge text-bg-dark mb-1"><%= tutorial.author %></p>
  <h3 class="text-uppercase text-primary"><%= tutorial.title %></h3>

  <p class="lead text-justify"><%= tutorial.description %></p>

  <div class="d-flex justify-content-between">
    <div>
      <span class="fst-italic fw-semibold">Rating&ensp;</span>
      <i class="bi bi-hand-thumbs-up" role="button"> <%= tutorial.upvotes %>&ensp;</i>
      <i class="bi bi-hand-thumbs-down" role="button"> <%= tutorial.downvotes %></i>
    </div>
    
    <div class="fst-italic">
      <span>Last update </span>
      <span><%= tutorial.updated_at.strftime('%b %d, %Y') %></span>
    </div>
  </div>
</div>
